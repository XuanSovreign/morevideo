<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@android:color/black"
    tools:context="com.space.morekindvideo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end">
        <VideoView
            android:id="@+id/texture_big"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <com.space.morekindvideo.MyVideoView
            android:id="@+id/texture_one"
            android:layout_width="150dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <com.space.morekindvideo.MyVideoView
            android:id="@+id/texture_two"
            android:layout_width="150dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <com.space.morekindvideo.MyVideoView
            android:id="@+id/texture_three"
            android:layout_width="150dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_height="match_parent" />

        <ListView
            android:id="@+id/lv_card"
            android:scrollbars="none"
            android:layout_width="80dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <VideoView
        android:id="@+id/texture_four"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:visibility="gone"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>
